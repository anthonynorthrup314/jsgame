  "devDependencies": {
    "@types/fs-extra": "^8.1.0",
    "@types/node": "^13.13.0",
    "@types/shelljs": "^0.8.7",
    "fs-extra": "^9.0.0",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.5",
    "ts-node": "^8.8.2",
    "tslint": "^6.1.1",
